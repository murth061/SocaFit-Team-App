<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.socafit">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
              <activity android:name=".ui.findfriends.post.PostActivity"></activity>
        <activity android:name=".ui.findfriends.chats.KariChatActivity" />
        <activity android:name=".ui.findfriends.chats.JamesChatActivity" />
        <activity android:name=".ui.findfriends.chats.CharlieChatActivity" />
        <activity android:name=".ui.profile.JamesProfile"></activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.scaledrone.chat.MainActivity" />
        <activity
            android:name="com.example.socafit.ui.goals.ExpandGoal"
            android:windowSoftInputMode="adjustPan">
        </activity>
        <activity
            android:name="com.example.socafit.ui.goals.NewGoal"
            android:windowSoftInputMode="adjustPan">
        </activity>
    </application>
</manifest>